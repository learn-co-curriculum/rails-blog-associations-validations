<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
  <h3>Content:</h3>
  <%= @post.content %>
  <h3>Tags:</h3>
  <ul>
    <% @post.tags.each do |tag| %>
    <li><%= tag.name %></li>
    <% end %>
  </ul>
</p>

<%= form_for(@post) do |f| %>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  <%= f.submit %>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
